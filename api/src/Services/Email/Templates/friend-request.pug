doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title New Friend Request Notification
    style.
      body {
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
      }
      .notification-container {
        background-color: #ffffff;
        max-width: 600px;
        margin: 40px auto;
        border-radius: 6px;
        border: 1px solid #ddd;
        overflow: hidden;
      }
      .header {
        background-color: #3369e7;
        color: #ffffff;
        text-align: center;
        padding: 20px;
      }
      .header h1 {
        margin: 0;
        font-size: 24px;
      }
      .content {
        padding: 20px;
        text-align: center;
        color: #333;
      }
      .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 20px;
        display: block;
      }
      .user-info {
        margin-bottom: 20px;
      }
      .user-info h2 {
        margin: 0;
        font-size: 22px;
        color: #3369e7;
      }
      .user-info p {
        margin: 5px 0;
        font-size: 16px;
      }
      .buttons {
        margin: 20px 0;
      }
      .buttons a {
        display: inline-block;
        text-decoration: none;
        padding: 10px 20px;
        margin: 0 10px;
        color: #ffffff;
        border-radius: 4px;
        font-size: 14px;
      }
      .view-user {
        background-color: #3369e7;
      }
      .show-notification {
        background-color: #999999;
      }
      .footer {
        background-color: #f5f5f5;
        text-align: center;
        padding: 10px;
        font-size: 13px;
        color: #999999;
      }
  body
    .notification-container
      .header
        h1 New Friend Request!
      .content
        img.profile-picture(src=profilePictureUrl alt="Profile Picture")
        .user-info
          h2 #{firstName} #{lastName} (@#{username})
          p Request sent on #{date}
        .buttons
          a.view-user(href="#") View User
          a.show-notification(href="#") Show Notification
      .footer
        p &copy; 2024 Twatter, Inc. All rights reserved.
